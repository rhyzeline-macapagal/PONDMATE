<!-- res/drawable/notification_card_bg.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card background color -->
    <solid android:color="#FFFFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#FFCCCCCC" />

    <!-- Optional padding inside shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
