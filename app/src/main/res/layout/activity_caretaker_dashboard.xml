<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#F9F9F9">

    <!-- Close Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/closeCaretaker"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="✖"
            android:textSize="28sp"
            android:textColor="#666666"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>

    <!-- Page Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Caretaker List"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#2196F3"
        android:textColor="@android:color/white" />

    <!-- Add Caretaker Button -->
    <Button
        android:id="@+id/btnAddCaretaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Caretaker"
        android:layout_gravity="end"
        android:layout_margin="12dp"
        android:backgroundTint="#00448D"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>

    <!-- Caretaker Table with limited height -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:weightSum="1">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#2196F3"
                    android:padding="8dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:gravity="center"
                        android:lines="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="Username"
                        android:gravity="center"
                        android:lines="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Name"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="Address"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="Salary"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- RecyclerView with fixed max height -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/caretakerRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#C0E6F8"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvTotalSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Overall Salary: ₱0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#01082D"
            android:background="#E3F2FD" />

        <TextView
            android:id="@+id/tvSalaryPerPond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Salary per Pond: ₱0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#01082D"
            android:background="#BBDEFB" />


    </LinearLayout>

    <!-- Salary Totals directly below the table -->

</LinearLayout>
