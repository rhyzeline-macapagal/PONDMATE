<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="#A6C4F1FF">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/closeCaretaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ–"
            android:textSize="18sp"
            android:textColor=" #01082D"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caretaker List"
            android:textColor=" #01082D"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />


        <Button
            android:id="@+id/btnAddCaretaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Caretaker"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00448D"
            android:gravity="center"
            app:cornerRadius="5dp"
            android:textColor="#FFFFFF"/>

        <!-- Table Headers - IMPROVED VISUAL DESIGN -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/tableheader"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:minHeight="56dp">

                <!-- Header Info Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="12dp">

                    <!-- Username Header -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="none" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="#E3F2FD"
                            android:textSize="11sp"
                            android:gravity="center"
                            android:layout_marginTop="1dp" />
                    </LinearLayout>

                    <!-- Password Header -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pass"
                            android:textColor="#E3F2FD"
                            android:textSize="11sp"
                            android:gravity="center"
                            android:layout_marginTop="1dp" />
                    </LinearLayout>

                    <!-- Full Name Header -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="#E3F2FD"
                            android:textSize="11sp"
                            android:gravity="center"
                            android:layout_marginTop="1dp" />
                    </LinearLayout>

                    <!-- Address Header -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:gravity="start"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Action Buttons Header Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:singleLine="true" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RecyclerView list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/caretakerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0E6F8"
            android:clipToPadding="false" />

    </LinearLayout>
</ScrollView>

