<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#F9F9F9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="âœ–"
            android:textSize="28sp"
            android:textColor="#666666"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>

    <!-- Page Title -->
    <TextView
        android:id="@+id/titleFeeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Farmgate Prices"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#001C4F"
        android:textColor="@android:color/white" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Below are the current farmgate prices per species and feed type. Tap 'Edit' to update the prices."
        android:textSize="14sp"
        android:textColor="#444"
        android:gravity="center"/>

    <!-- Horizontal + Vertical Scroll -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TableLayout
                android:id="@+id/tableFarmgate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@drawable/table_background"
                android:padding="4dp"
                android:elevation="4dp">


                <!-- Header -->
                <TableRow

                    android:padding="4dp">

                    <TextView
                        android:text="Action"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@drawable/cell_bg"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:text="Species"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@drawable/cell_bg"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:text="Price/kg"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@drawable/cell_bg"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:text="Updated"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@drawable/cell_bg"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </TableRow>

            </TableLayout>

        </ScrollView>
    </HorizontalScrollView>
</LinearLayout>
