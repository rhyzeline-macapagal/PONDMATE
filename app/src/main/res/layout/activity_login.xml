<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbgf"
    android:fitsSystemWindows="true"
    tools:context=".login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/topBar"
        android:background="#001C4F"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="App Logo"
            android:src="@drawable/fpmslogo" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="PONDMATE"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:letterSpacing="0.05" />
    </LinearLayout>

    <!-- Centered content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- Welcome Text Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textColor="#001C4F"
                android:textSize="28sp"
                android:fontFamily="sans-serif-light"
                android:alpha="0.9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in to continue"
                android:textColor="#001C4F"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:alpha="0.7"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Enhanced Login Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/loginCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:orientation="vertical">

                <!-- Modern Title -->
                <TextView
                    android:id="@+id/loginTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"
                    android:textColor="#001C4F"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:letterSpacing="0.1" />

                <!-- Username Input -->
                <EditText
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_corner"
                    android:drawableStart="@drawable/uname_icon"
                    android:drawablePadding="12dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#001C4F"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />

                <!-- Password Input -->
                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rounded_corner"
                    android:drawableStart="@drawable/lock_icon"
                    android:drawableEnd="@drawable/hidden"
                    android:drawablePadding="12dp"
                    android:hint="Password"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:textColor="#001C4F"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />

                <!-- Options Row with better alignment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="22dp">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#001C4F"
                        android:textColor="#001C4F"
                        android:text="Remember me"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/forgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:text="Forgot Password?"
                        android:textColor="#00448D"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Login Button -->
                <Button
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00448D"
                    android:fontFamily="sans-serif-medium"
                    android:text="LOG IN"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:letterSpacing="0.05" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>