<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6FFFFFF"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:background="#001C4F"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:contentDescription="App Logo"
            android:src="@drawable/fpmslogo" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/appLogo"
            android:text="PONDMATE"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Notifications"
            android:src="@drawable/ic_notif"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/notificationIcon"
            android:contentDescription="Profile"
            android:src="@drawable/ic_profile"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/adminIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/profileIcon"
            android:contentDescription="Admin Controls"
            android:src="@drawable/ic_admin"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pondHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:background="#A6FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- ðŸ”™ Back Button -->
        <ImageButton
            android:id="@+id/backToDashboardBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back1"
            android:contentDescription="Back to Pond Dashboard" />

        <!-- ðŸ·ï¸ Centered Pond Name -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/backToDashboardBtn"
            android:layout_toStartOf="@+id/spacer"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/pondNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:text="POND NAME"
                android:textSize="22sp"
                android:textColor="#01082D" />

        </FrameLayout>

        <!-- Invisible spacer to balance the back button -->
        <View
            android:id="@+id/spacer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <!-- ðŸ”² Fragment Container -->
    <FrameLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pondHeader"
        android:layout_above="@id/bottomNavigation"
        android:background="#A6FFFFFF">

    </FrameLayout>

    <!-- ðŸ”½ Bottom Navigation -->
    <com.nafis.bottomnavigation.NafisBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        app:mbn_backgroundBottomColor="#001C4F"
        app:mbn_circleColor="#0F2573"
        app:mbn_countBackgroundColor="#D8D2C2"
        app:mbn_countTextColor="#01082D"
        app:mbn_countTypeface="fonts/SourceSansPro-Regular.ttf"
        app:mbn_defaultIconColor="#266CA9"
        app:mbn_hasAnimation="true"
        app:mbn_rippleColor="#FAF7F0"
        app:mbn_selectedIconColor="#D0DBE0" />
</RelativeLayout>