<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6C4F1FF"
    tools:context=".MainActivity">

    <!-- 🔵 Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#001C4F"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:contentDescription="App Logo"
            android:src="@drawable/fpmslogo" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/appLogo"
            android:text="PONDMATE"
            android:textColor="#BAADE1FB"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />

        <ImageView
            android:id="@+id/adminIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/profileIcon"
            android:contentDescription="Admin Controls"
            android:src="@drawable/ic_admin" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/notificationIcon"
            android:contentDescription="Profile"
            android:src="@drawable/ic_profile" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Notifications"
            android:src="@drawable/ic_notif" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pondHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:background="#A6C4F1FF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp">

        <!-- 🔙 Back Button -->
        <ImageButton
            android:id="@+id/backToDashboardBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Back to Pond Dashboard"
             />

        <!-- 🏷️ Centered Pond Name -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/pondNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:text="POND NAME"
                android:textSize="24sp"
                android:textColor="#01082D" />
        </FrameLayout>

    </RelativeLayout>



    <!-- 🔲 Fragment Container -->
    <FrameLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pondHeader"
        android:layout_above="@id/bottomNavigation"
        android:background="#A6C4F1FF">


    <!-- 🔙 Floating Back Button -->


    </FrameLayout>

    <!-- 🔽 Bottom Navigation -->
    <com.nafis.bottomnavigation.NafisBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        app:mbn_backgroundBottomColor="#001C4F"
        app:mbn_circleColor="#0F2573"
        app:mbn_countBackgroundColor="#D8D2C2"
        app:mbn_countTextColor="#01082D"
        app:mbn_countTypeface="fonts/SourceSansPro-Regular.ttf"
        app:mbn_defaultIconColor="#266CA9"
        app:mbn_hasAnimation="true"
        app:mbn_rippleColor="#FAF7F0"
        app:mbn_selectedIconColor="#ADE1FB" />
</RelativeLayout>
