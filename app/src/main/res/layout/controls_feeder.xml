<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ControlsFeeder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Feed Dispenser Control Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="@drawable/rounded_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wifi"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FEED DISPENSER"
                        android:textColor="#01082D"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Connection Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnToggleFeeder"
                        android:layout_width="200dp"
                        android:layout_height="56dp"
                        android:backgroundTint="#00448D"
                        android:text="CONNECT"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="28dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/feederStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Disconnected"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@drawable/rounded_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imgFeedLevel"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/feed_funnel_level"
                    android:contentDescription="Feed Level" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FEED CONTAINER LEVEL"
                    android:textColor="#01082D"
                    android:textSize="20sp"
                    android:paddingStart="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- **Remaining Feed Display** -->
            <TextView
                android:id="@+id/tvRemainingFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Feed: 0 g"
                android:textColor="#444"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- **Add Feed Button** -->
            <Button
                android:id="@+id/btnStoreFeeds"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="STORE FEEDS"
                android:textColor="#FFFFFF"
                android:backgroundTint="#00448D"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="12dp"
                app:cornerRadius="28dp"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
