<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_dialog_bg"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✖"
            android:textSize="20sp"
            android:textColor="#01082D"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Maintenance Cost"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#01082D"
        android:layout_marginBottom="16dp" />

    <!-- Spinner for maintenance type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintenance Type"
        android:textColor="#01082D" />
    <Spinner
        android:id="@+id/spinnerMaintenanceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:textColorHint="#01082D"/>

    <!-- Optional "Other" field -->
    <EditText
        android:id="@+id/etOtherMaintenanceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Specify if Other"
        android:visibility="gone"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Cost -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost (₱)"
        android:textColor="#01082D" />
    <EditText
        android:id="@+id/etMaintenanceCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="₱0.00"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="#01082D"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black"
            app:cornerRadius="1dp"
            android:backgroundTint="#BAD0E6F0" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAddMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            app:cornerRadius="1dp"
            android:backgroundTint="#00448D"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
