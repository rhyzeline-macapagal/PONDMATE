<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_dialog_bg"
        android:minWidth="320dp"
        android:maxWidth="400dp"
        android:padding="8dp"
        android:elevation="12dp">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD POND"
                android:textColor="#01082D"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="✖"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Pond Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp">

                    <!-- Pond Name -->




                    <!-- Pond Area -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false"
                        android:layout_marginBottom="16dp">

                        <!-- Date Started -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pond Name"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp"/>

                            <EditText
                                android:id="@+id/etPondName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter pond name"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp"/>
                        </LinearLayout>

                        <!-- Estimated Harvest Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area (m²)"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp"/>

                            <EditText
                                android:id="@+id/etPondArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter area"
                                android:inputType="numberDecimal"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false"
                        android:layout_marginBottom="16dp">

                        <!-- Date Started -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pond Created"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"

                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp"/>

                            <TextView
                                android:id="@+id/tvDateStarted"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_edittext"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:textColor="#01082D"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:text="mm/dd/yyyy"/>
                        </LinearLayout>

                        <!-- Estimated Harvest Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Stocking"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"

                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp"/>

                            <TextView
                                android:id="@+id/tvStocking"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_edittext"
                                android:padding="6dp"
                                android:text="mm/dd/yyyy"
                                android:textColor="#01082D"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <!-- Pond Image Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_card"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pond Image"
                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"/>

                    <ImageView
                        android:id="@+id/ivPondImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_harvest"
                        android:background="@drawable/rounded_dialog_bg"
                        android:padding="4dp" />

                    <Button
                        android:id="@+id/btnCaptureImage"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Capture Pond Image"
                        android:backgroundTint="#00448D"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="20dp"
                        android:letterSpacing="0.02"
                        app:cornerRadius="6dp"
                        android:elevation="2dp"
                        android:stateListAnimator="@null"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCaretakerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assign Caretakers"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btnSelectCaretakers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Caretakers"
                    android:backgroundTint="#00448D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="20dp"
                    android:letterSpacing="0.02"
                    app:cornerRadius="6dp"
                    android:elevation="2dp"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/caretakerChipContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="flex_start"
                    />


                <!-- Save Button -->
                <Button
                    android:id="@+id/btnSavePond"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="CREATE POND"
                    android:backgroundTint="#00448D"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:letterSpacing="0.02"
                    app:cornerRadius="8dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
