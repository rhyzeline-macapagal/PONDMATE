<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_bg">

    <EditText
        android:id="@+id/etPondName"
        android:hint="Pond Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etBreed"
        android:hint="Fish Breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etFishCount"
        android:hint="No. of Fishes"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etCostPerFish"
        android:hint="Cost per Fingerling"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <DatePicker
        android:id="@+id/dateStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDateHarvest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estimated Harvest Date"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnSavePond"
        android:text="Save Pond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
