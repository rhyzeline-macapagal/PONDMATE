<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_dialog_bg"
        android:minWidth="320dp"
        android:maxWidth="400dp"
        android:padding="8dp"
        android:elevation="12dp">

        <!-- Header Section with Close Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD POND"
                android:textColor="#01082D"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="✖"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <!-- Form Fields Container -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card"
                    android:padding="8dp"
                    android:layout_marginBottom="2dp">

                    <!-- Pond Name + Fish Breed Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="2dp">

                        <!-- Pond Name -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pond Name"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp"/>

                            <EditText
                                android:id="@+id/etPondName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter name"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp"/>
                        </LinearLayout>

                        <!-- Fish Breed -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Species"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textbox_background"
                                android:padding="2dp">

                                <Spinner
                                    android:id="@+id/spinnerBreed"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="6dp"
                                    android:spinnerMode="dropdown"
                                    android:background="@android:color/transparent" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Pond Area -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area (m²)"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp"/>

                            <EditText
                                android:id="@+id/etPondArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter area"
                                android:inputType="numberDecimal"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp"/>
                        </LinearLayout>

                    </LinearLayout>



                    <!-- Fish Count × Cost per Fingerling = Total Cost -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp">

                        <!-- Labels Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:gravity="center">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Fish Count"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="left"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Unit Cost"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Total Cost"
                                android:textColor="#01082D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="right"/>
                        </LinearLayout>

                        <!-- Input Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="3"
                            android:layout_marginTop="4dp">

                            <!-- Fish Count -->
                            <EditText
                                android:id="@+id/etFishCount"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:hint="Stocks"
                                android:inputType="number"
                                android:gravity="center"
                                android:background="@drawable/textbox_background"
                                android:textSize="14sp"
                                android:minHeight="48dp"
                                android:padding="6dp"/>

                            <!-- Multiply Sign -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="×"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="4dp"
                                android:textColor="#01082D"
                                android:gravity="center_vertical"/>

                            <!-- Cost per Fingerling -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/textbox_background"
                                android:paddingHorizontal="8dp"
                                android:minHeight="48dp"
                                android:gravity="center_vertical">
                                

                                <EditText
                                    android:id="@+id/etCostPerFish"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="0.00"
                                    android:inputType="numberDecimal"
                                    android:background="@android:color/transparent"
                                    android:textColor="#01082D"
                                    android:textColorHint="#888888"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"/>
                            </LinearLayout>

                            <!-- Equal Sign -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="="
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="4dp"
                                android:textColor="#01082D"
                                android:gravity="center_vertical"/>

                            <!-- Total Cost -->
                            <TextView
                                android:id="@+id/tvTotalFingerlingsCost"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="₱0.00"
                                android:textSize="14sp"
                                android:textColor="#01082D"
                                android:background="@drawable/textbox_background"
                                android:padding="6dp"
                                android:minHeight="48dp"/>
                        </LinearLayout>
                    </LinearLayout>


                    <!-- Date Started + Harvest Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false"
                        android:layout_marginBottom="16dp">

                        <!-- Date Started -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Stocking"
                                android:textColor="#01082D"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:layout_marginStart="2dp"/>

                            <TextView
                                android:id="@+id/tvDateStarted"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_edittext"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:textColor="#01082D"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:text="mm/dd/yyyy"/>
                        </LinearLayout>

                        <!-- Estimated Harvest Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Harvest Date"
                                android:textColor="#01082D"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:layout_marginStart="2dp"/>

                            <TextView
                                android:id="@+id/tvDateHarvest"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_edittext"
                                android:padding="6dp"
                                android:text="mm/dd/yyyy"
                                android:textColor="#01082D"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="6dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_card"
                        android:padding="16dp">

                        <!-- Fish Weight + Feed Quantity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <!-- Fish Weight -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fish Weight (g)"
                                    android:textColor="#01082D"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <EditText
                                    android:id="@+id/etFishWeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/textbox_background"
                                    android:hint="Enter weight"
                                    android:inputType="numberDecimal"
                                    android:gravity="center"
                                    android:textColor="#01082D"
                                    android:textColorHint="#888888"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Feed Quantity -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Feed Qty. per Cycle"
                                    android:textColor="#01082D"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvFeedQuantity"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:hint="00.00"
                                    android:background="@drawable/rounded_edittext"
                                    android:padding="6dp"
                                    android:textSize="14sp"
                                    android:textColor="#01082D"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <!-- Fish Weight -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">
                            <!-- New Feed Price Section -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Feed Price/cycle"
                                android:textColor="#01082D"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/feedprice"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/rounded_edittext"
                                android:gravity="center"
                                android:hint="₱0.00"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">
                                <!-- New Feed Price Section -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Feed Price/day"
                                    android:textColor="#01082D"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/feedpriceday"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/rounded_edittext"
                                    android:gravity="center"
                                    android:hint="₱0.00"
                                    android:textColor="#01082D"
                                    android:textColorHint="#888888"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feeding Schedule"
                            android:textColor="#01082D"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <!-- Cell 1: First Feeding -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="First"
                                    android:textColor="#666666"
                                    android:textSize="12sp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/timeoffeeding1"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/textbox_background"
                                    android:gravity="center"
                                    android:hint="00:00"
                                    android:padding="12dp"
                                    android:textColor="#01082D"
                                    android:textColorHint="#888888"
                                    android:textSize="14sp" />

                                <Button
                                    android:id="@+id/btnselecttime1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#00448D"
                                    android:text="Set"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Cell 2: Second Feeding -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Second"
                                    android:textColor="#666666"
                                    android:textSize="12sp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/timeoffeeding2"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/textbox_background"
                                    android:gravity="center"
                                    android:hint="00:00"
                                    android:padding="12dp"
                                    android:textColor="#01082D"
                                    android:textColorHint="#888888"
                                    android:textSize="14sp" />

                                <Button
                                    android:id="@+id/btnselecttime2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#00448D"
                                    android:text="Set"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Cell 3: Third Feeding -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Third"
                                    android:textColor="#666666"
                                    android:textSize="12sp"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/timeoffeeding3"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/textbox_background"
                                    android:gravity="center"
                                    android:hint="00:00"
                                    android:padding="12dp"
                                    android:textColor="#01082D"
                                    android:textColorHint="#888888"
                                    android:textSize="14sp" />

                                <Button
                                    android:id="@+id/btnselecttime3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#00448D"
                                    android:text="Set"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="6dp" />

                <!-- Image Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_card"
                    android:padding="8dp"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pond Image"
                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"/>

                    <ImageView
                        android:id="@+id/ivPondImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_harvest"
                        android:background="@drawable/rounded_dialog_bg"
                        android:padding="4dp" />

                    <Button
                        android:id="@+id/btnCaptureImage"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Capture Pond Image"
                        android:backgroundTint="#00448D"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="20dp"
                        android:letterSpacing="0.02"
                        app:cornerRadius="6dp"
                        android:elevation="2dp"
                        android:stateListAnimator="@null"/>
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="6dp" />




                <!-- Save Button -->
                <Button
                    android:id="@+id/btnSavePond"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="CREATE POND"
                    android:backgroundTint="#00448D"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:letterSpacing="0.02"
                    app:cornerRadius="8dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>