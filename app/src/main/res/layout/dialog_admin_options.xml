<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_dialog_bg">

    <!-- Close Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="âœ–"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>

    <!-- Dialog Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Controls"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:gravity="center"
        android:padding="8dp"
        android:rowCount="2">

        <!-- Caretaker Dashboard -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnCaretaker"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_button_background"
                android:contentDescription="Caretaker Dashboard"
                android:src="@drawable/ic_caretaker"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Caretaker"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Farmgate Price -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnFarmgatePrice"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_button_background"
                android:contentDescription="Farmgate Price"
                android:src="@drawable/farmgate"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Farmgate \n Price"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Feeds Price -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnFeedsPrice"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_button_background"
                android:contentDescription="Feeds Price"
                android:src="@drawable/ic_feeds"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Feeds Price"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Feeder ID -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnDeviceId"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_button_background"
                android:contentDescription="Feeder ID"
                android:src="@drawable/outline_brick_24"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Feeder"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

    </GridLayout>

</LinearLayout>
