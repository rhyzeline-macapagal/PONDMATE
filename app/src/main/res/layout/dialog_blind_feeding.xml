<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_bg"
    android:layout_gravity="center"
    android:padding="12dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="✖"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blind Feeding Logs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="6dp"/>

        <!-- Feeding Record Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_dialog_bg"
            android:padding="16dp"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <!-- Feed Type + Quantity in one row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Feed Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feed Type"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerFeedType"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="8dp"/>

                    <EditText
                        android:id="@+id/etOtherFeedType"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Specify if Other"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Quantity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity (kg)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etFeedQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="0.0"
                        android:textSize="12sp"

                        android:inputType="numberDecimal"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Feeding Date + Cost in one row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <!-- Feeding Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feeding Date"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etFeedDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Select Date"
                        android:focusable="false"
                        android:textSize="12sp"
                        android:clickable="true"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>
                </LinearLayout>

                <!-- Cost -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost (₱)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etFeedCost"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="₱0.00"
                        android:textSize="12sp"

                        android:inputType="numberDecimal"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnCancelFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Cancel"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#BADED8D8"/>

                <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnAddFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#00448D"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Feed Logs Table -->
        <!-- Scrollable Feed Logs Table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fillViewport="true"
            android:scrollbars="horizontal">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <TableLayout
                    android:id="@+id/tableFeedLogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="@drawable/rounded_dialog_bg"
                    android:padding="2dp"
                    android:scrollbars="vertical|horizontal">

                    <!-- Table Header -->
                    <TableRow
                        android:background="#00448D"
                        android:padding="2dp">

                        <TextView
                            android:text="Date"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Feed Type"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Quantity (kg)"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Cost (₱)"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp"/>
                    </TableRow>

                </TableLayout>

            </ScrollView>
        </HorizontalScrollView>


    </LinearLayout>
</ScrollView>
