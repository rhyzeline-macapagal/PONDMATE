<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_dialog_bg"
        android:minWidth="320dp"
        android:maxWidth="400dp"
        android:padding="8dp"
        android:elevation="12dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT POND DETAILS"
                android:textColor="#01082D"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="✖"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Pond Information Section -->

                <!-- Dates Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="Pond Information"
                        android:textColor="#01082D"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Pond Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pond Name"
                        android:textColor="#01082D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/etPondName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/textbox_background"
                        android:gravity="center"
                        android:hint="Enter pond name"
                        android:minHeight="48dp"
                        android:padding="6dp"
                        android:textColor="#01082D"
                        android:textColorHint="#888888"
                        android:textSize="14sp" />

                    <!-- Fish Breed + Pond Area -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish Breed"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pond Area (sq.m)"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                            <EditText
                                android:id="@+id/etPondArea"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:hint="Enter area"
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:padding="6dp"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fish Count + Cost per Fish -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish Count"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                            <EditText
                                android:id="@+id/etFishCount"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:hint="Enter fish count"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:padding="6dp"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cost per Fish (₱)"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                            <EditText
                                android:id="@+id/etCostPerFish"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:hint="₱0.00"
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:padding="6dp"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Cost"
                        android:textColor="#01082D"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvTotalFingerlingsCost"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/rounded_dialog_bg"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:padding="6dp"
                        android:textColor="#01082D"
                        android:textColorHint="#888888"
                        android:textSize="14sp" />

                    <!-- Mortality -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mortality Rate (%)"
                        android:textColor="#01082D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/etMortalityRate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textbox_background"
                        android:gravity="center"
                        android:hint="Enter mortality rate"
                        android:inputType="numberDecimal"
                        android:minHeight="48dp"
                        android:padding="6dp"
                        android:textColor="#01082D"
                        android:textColorHint="#888888"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#01082D"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grow-out Start Date"
                        android:textColor="#01082D"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etDateCreated"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textbox_background"
                        android:hint="Select date created"
                        android:focusable="false"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:padding="6dp"
                        android:minHeight="48dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stocking Date \n(14 days after grow-out start)"
                        android:textColor="#01082D"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etStockingDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textbox_background"
                        android:hint="Select stocking date"
                        android:focusable="false"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:padding="6dp"
                        android:minHeight="48dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estimated Harvest Date \n(6 months after stocking)"
                        android:textColor="#01082D"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etHarvestDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textbox_background"
                        android:hint="Select estimated harvest date"
                        android:focusable="false"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:padding="6dp"
                        android:minHeight="48dp" />
                </LinearLayout>

                <!-- Caretaker Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">


                    <TextView
                        android:id="@+id/tvCaretakerLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assign Caretakers"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/btnSelectCaretakers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Caretakers"
                        android:backgroundTint="#00448D"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="20dp"
                        android:letterSpacing="0.02"
                        app:cornerRadius="6dp"
                        android:elevation="2dp"/>

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/caretakerChipContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="12dp"
                        app:flexWrap="wrap"
                        app:alignItems="center"
                        app:justifyContent="flex_start"
                        />

                </LinearLayout>

                <!-- Save/Cancel Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:backgroundTint="#B0B0B0"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="16dp" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Changes"
                        android:backgroundTint="#00448D"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
