<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_dialog_bg"
        android:minWidth="320dp"
        android:maxWidth="400dp"
        android:padding="8dp"
        android:elevation="12dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT POND DETAILS"
                android:textColor="#01082D"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="✖"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Pond Information Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pond Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#01082D"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- Pond Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pond Name"
                        android:textColor="#01082D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/etPondName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter pond name"
                        android:background="@drawable/textbox_background"
                        android:gravity="center"
                        android:textColor="#01082D"
                        android:textColorHint="#888888"
                        android:textSize="14sp"
                        android:padding="6dp"
                        android:layout_marginBottom="10dp"
                        android:minHeight="48dp"/>

                    <!-- Fish Breed + Pond Area (Side by Side) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"

                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish Breed"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                            <Spinner
                                android:id="@+id/spinnerSpecies"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:spinnerMode="dropdown"
                                android:background="@drawable/textbox_background"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pond Area (sq.m)"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                            <EditText
                                android:id="@+id/etPondArea"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/textbox_background"
                                android:hint="Enter area"
                                android:inputType="numberDecimal"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fish Count + Cost per Fish (Side by Side) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fish Count"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                            <EditText
                                android:id="@+id/etFishCount"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/textbox_background"
                                android:hint="Enter fish count"
                                android:inputType="number"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cost per Fish (₱)"
                                android:textColor="#01082D"
                                android:textSize="13sp" />

                            <EditText
                                android:id="@+id/etCostPerFish"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/textbox_background"
                                android:hint="₱0.00"
                                android:inputType="numberDecimal"
                                android:gravity="center"
                                android:textColor="#01082D"
                                android:textColorHint="#888888"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:minHeight="48dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Dates Section -->

                <!-- Mortality Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mortality Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#01082D"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mortality Rate (%)"
                        android:textColor="#01082D"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/etMortalityRate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textbox_background"
                        android:hint="Enter mortality rate"
                        android:inputType="numberDecimal"
                        android:gravity="center"
                        android:textColor="#01082D"
                        android:textColorHint="#888888"
                        android:textSize="14sp"
                        android:padding="6dp"
                        android:minHeight="48dp" />
                </LinearLayout>

                <!-- Save/Cancel Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:backgroundTint="#B0B0B0"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="16dp" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Changes"
                        android:backgroundTint="#00448D"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
