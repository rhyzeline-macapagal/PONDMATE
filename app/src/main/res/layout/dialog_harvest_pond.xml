<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_bg"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="âœ–"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvHarvestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready for Harvest!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvHarvestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This pond has reached its harvest date."
        android:textColor="#444"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnHarvestNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harvest Pond"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:paddingVertical="10dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
