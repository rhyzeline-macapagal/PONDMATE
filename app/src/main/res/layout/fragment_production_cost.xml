<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgapp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ·ï¸ Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCTION COST"
            android:textColor="#4A4947"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_container"
            android:elevation="4dp"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Type of Fingerlings:"
                    android:textColor="#4A4947"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="40dp"
                    android:text="Amt. per Piece:"
                    android:textColor="#4A4947"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/fishbreedpcostdisplay"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="--"
                    android:paddingStart="8dp"
                    android:textAlignment="textEnd"
                    android:textColorHint="#4A4947"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/amtperpiece"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:fontFamily="sans-serif-light"
                    android:hint="--"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:paddingStart="8dp"
                    android:textAlignment="textEnd"
                    android:textColorHint="#4A4947"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_edittext"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="No. of Fingerlings:"
                    android:textColor="#4A4947"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:text="Cost of Fingerlings:"
                    android:textColor="#4A4947"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/numoffingerlings"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="--"
                    android:paddingStart="8dp"
                    android:textAlignment="textEnd"
                    android:textColorHint="#4A4947"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/amtoffingerlings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="--"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"
                    android:textAlignment="textEnd"
                    android:textColorHint="#4A4947"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Type of Feeds:"
                    android:textColor="#4A4947"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feeders_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:foregroundGravity="center_vertical"
                    android:weightSum="10">
                    <Button
                        android:id="@+id/typeoffeeders"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:hint="Select"
                        android:textAlignment="textStart"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:backgroundTint="#4CD3D3D3"
                        android:fontFamily="sans-serif-light"
                        android:textColorHint="#4A4947"
                        android:textStyle="bold"
                        app:cornerRadius="10dp"
                        android:drawableEnd="@drawable/ic_dropdown_arrow"/>

                    <EditText
                        android:id="@+id/amtoffeeders"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginStart="5dp"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="â‚±1,500"
                        android:inputType="numberDecimal"
                        android:paddingStart="8dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#4A4947"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"/>

                    <ImageButton
                        android:id="@+id/addToFeedsbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#00FFFFFF"
                        android:layout_marginStart="2dp"
                        android:contentDescription="Add Image"
                        android:src="@android:drawable/ic_menu_add"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/maintenancelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Type of Maintenance:"
                android:textColor="#4A4947"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/maintenance_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/initialMaintenanceType"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#4CD3D3D3"
                        android:drawableEnd="@drawable/ic_dropdown_arrow"
                        android:fontFamily="sans-serif-light"
                        android:hint="Select"
                        android:padding="8dp"
                        android:textAlignment="textStart"
                        android:textColorHint="#4A4947"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:cornerRadius="10dp" />

                    <EditText
                        android:id="@+id/initialMaintenanceCost"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginStart="5dp"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="â‚±1,500"
                        android:inputType="numberDecimal"
                        android:paddingStart="8dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#4A4947"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>

                    <ImageButton
                        android:id="@+id/addMaintenanceButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#00FFFFFF"
                        android:layout_marginStart="2dp"
                        android:contentDescription="Add Image"
                        android:src="@android:drawable/ic_menu_add"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/maintenanceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Capital:"
                    android:textColor="#4A4947"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:fontFamily="sans-serif"
                    android:text="Labor:"
                    android:textColor="#4A4947"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/capital"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif-light"
                    android:hint="â‚±"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"
                    android:textAlignment="textEnd"
                    android:textColorHint="#4A4947"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/labor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif-light"
                    android:hint="â‚±1,500"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:paddingStart="8dp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="textEnd"
                    android:textColorHint="#4A4947"
                    android:textStyle="bold" />
            </LinearLayout>


            <Button
                android:id="@+id/pceditbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#4A4947"
                android:text="EDIT"
                android:layout_gravity="center"
                app:cornerRadius="1dp"
                android:fontFamily="sans-serif"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/savebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#047CA1"
                android:text="Save"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                app:cornerRadius="0dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
