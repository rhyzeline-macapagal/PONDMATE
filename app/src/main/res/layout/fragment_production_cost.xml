<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#A6FFFFFF"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAddProductionCost"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Expenses"

                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#00448D"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="5dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnStockFingerlings"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Fingerlings"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#5B5B5B"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="5dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnFeedLogs"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Blind Feeding"

                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#00448D"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="5dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnSampling"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Sampling"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#00448D"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="5dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/productionCostSummarySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production Cost Summary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="12dp" />

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:background="#E3F2FD">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:textSize="13sp"
                    android:paddingStart="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:textSize="13sp"
                    android:textAlignment="textEnd"
                    android:paddingEnd="12dp"/>
            </LinearLayout>

            <!-- Summary Rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fingerlings"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummaryFingerlings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Feeds"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummaryFeeds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Maintenance"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummaryMaintenance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salary"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummarySalary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <!-- Total Row with Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="#F3E5F5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textColor="#1A237E"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvSummaryTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Pond Information Card -->
        <LinearLayout
            android:id="@+id/pondInformationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Pond Information"
                android:textColor="#1A237E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- First Row: Fingerling Type & Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Species"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/fishbreedpcostdisplay"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="--"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Stocks"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/numoffingerlings"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="--"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second Row: Amount per Piece & Total Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unit Cost"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/amtperpiece"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="₱"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Cost"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/amtoffingerlings"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="₱"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Third Row: Feed Type & Cycle Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feed Type"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/feedtypefeeders"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary Duration"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerMonths"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:entries="@array/production_months"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Production Cost Summary Card -->

        <!-- ROI Card -->
        <LinearLayout
            android:id="@+id/roiSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:elevation="3dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return on Investment Analysis"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="8dp" />

            <!-- Estimated ROI Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F3E5F5"
                android:padding="12dp"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projected ROI"
                    android:textColor="#1A237E"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold" />

                <!-- Estimated Revenue & Percentage Row -->
                <TextView
                    android:id="@+id/tvEstimatedROI"
                    android:layout_width="180dp"
                    android:layout_height="36dp"
                    android:background="@drawable/textbox_background"
                    android:padding="8dp"
                    android:layout_marginStart="20dp"
                    android:text="-%"
                    android:textColor="#212121"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3E5F5"
                android:layout_marginBottom="8dp"
                android:padding="5dp">
            <Button
                android:id="@+id/btnViewROIBreakdown"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Projected ROI Breakdown"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#00448D"
                android:drawableLeft="@drawable/ic_pdf"
                android:drawablePadding="5dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginStart="6dp"/>
            </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            android:weightSum="1">


            <Button
                android:id="@+id/btnGenerateReport"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Generate Report"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="#00448D"
                android:drawableLeft="@drawable/ic_pdf"
                android:drawablePadding="5dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>