<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgapp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🏷️ Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCTION COST"
            android:textColor="#4A4947"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_container"
            android:elevation="4dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_gravity="center">


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:rowOrderPreserved="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Type of Fingerlings:"
                        android:textColor="#4A4947"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/fishbreedpcostdisplay"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:hint="--"
                        android:paddingStart="8dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#4A4947"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of Fingerlings:"
                        android:textColor="#4A4947"
                        android:layout_marginTop="4dp"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"/>


                    <TextView
                        android:id="@+id/numoffingerlings"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:fontFamily="sans-serif-light"
                        android:hint="--"
                        android:paddingStart="8dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#4A4947"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Amount per Piece:"
                        android:textColor="#4A4947"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/amtperpiece"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:hint="--"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#4A4947"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_edittext"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp"
                        android:text="Cost of Fingerlings:"
                        android:textColor="#4A4947"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/amtoffingerlings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:hint="--"
                        android:inputType="numberDecimal"
                        android:textAlignment="textEnd"
                        android:textColorHint="#4A4947"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>

                </LinearLayout>
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:rowOrderPreserved="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of Feeds:"
                        android:textColor="#4A4947"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:id="@+id/feeders_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:foregroundGravity="center_vertical">
                    <Button
                        android:id="@+id/typeoffeeders"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="Select"
                        android:textAlignment="textStart"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:backgroundTint="#4CD3D3D3"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        app:cornerRadius="10dp"
                        android:drawableEnd="@drawable/ic_dropdown_arrow"/>

                    <EditText
                        android:id="@+id/amtoffeeders"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginStart="5dp"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="₱1,500"
                        android:inputType="numberDecimal"
                        android:paddingStart="8dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#000000"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"/>

                    <ImageButton
                        android:id="@+id/addToFeedsbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#00FFFFFF"
                        android:layout_marginStart="2dp"
                        android:contentDescription="Add Image"
                        android:src="@android:drawable/ic_menu_add"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:rowOrderPreserved="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Maintenance:"
                        android:textColor="#4A4947"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:id="@+id/maintenance_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/initialMaintenanceType"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#4BD3D3D3"
                        android:drawableEnd="@drawable/ic_dropdown_arrow"
                        android:fontFamily="sans-serif-light"
                        android:hint="Select"
                        android:padding="8dp"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:cornerRadius="10dp" />

                    <EditText
                        android:id="@+id/initialMaintenanceCost"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginStart="5dp"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="₱1,500"
                        android:inputType="numberDecimal"
                        android:paddingStart="8dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#000000"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>

                    <ImageButton
                        android:id="@+id/addMaintenanceButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#00FFFFFF"
                        android:layout_marginStart="2dp"
                        android:contentDescription="Add Image"
                        android:src="@android:drawable/ic_menu_add"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/maintenanceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:rowOrderPreserved="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary:"
                        android:textColor="#4A4947"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:id="@+id/salary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/initialSalaryDate"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#4BD3D3D3"
                        android:fontFamily="sans-serif-light"
                        android:text="Select Date"
                        android:padding="8dp"
                        android:textAlignment="textStart"
                        android:textColor="#9E9993"
                        android:textSize="14sp"
                        app:cornerRadius="10dp" />

                    <EditText
                        android:id="@+id/initialSalaryCost"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginStart="5dp"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="₱1,500"
                        android:inputType="numberDecimal"
                        android:paddingStart="8dp"
                        android:textAlignment="textEnd"
                        android:textColorHint="#000000"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>

                    <ImageButton
                        android:id="@+id/addSalaryButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#00FFFFFF"
                        android:layout_marginStart="2dp"
                        android:contentDescription="Add Image"
                        android:src="@android:drawable/ic_menu_add"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/salaryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:rowOrderPreserved="false"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp">

                    <Button
                        android:id="@+id/editpcost"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#4A4947"
                        android:text="EDIT"
                        android:layout_gravity="center"
                        app:cornerRadius="1dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#FFFFFF"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:"
                        android:textColor="#4A4947"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp">
                    <TextView
                        android:id="@+id/capital"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:hint="₱"
                        android:inputType="numberDecimal"
                        android:textAlignment="textEnd"
                        android:textColorHint="#4A4947"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
        <Button
            android:id="@+id/generatereportpcostroi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4A4947"
            android:text="GENERATE REPORT"
            android:layout_gravity="center"
            app:cornerRadius="1dp"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
</ScrollView>
