<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#A6C4F1FF"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAddProductionCost"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Add Maintenance"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:backgroundTint="#00448D"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="8dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnGenerateReport"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Generate Report"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:backgroundTint="#00448D"
                android:drawableLeft="@drawable/ic_pdf"
                android:drawablePadding="8dp"
                app:cornerRadius="6dp"
                android:textColor="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Pond Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Pond Information"
                android:textColor="#1A237E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- First Row: Fingerling Type & Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fingerling Type"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/fishbreedpcostdisplay"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="--"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of Fingerlings"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/numoffingerlings"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="--"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second Row: Amount per Piece & Total Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount per Piece"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/amtperpiece"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="₱"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Fingerlings Cost"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/amtoffingerlings"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="₱"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Third Row: Feed Type & Feed Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feed Type"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/typeoffeeders"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="e.g. Starter, Grower"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Feed Cost"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/amtoffeeders"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:hint="₱"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Production Cost Summary Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production Cost Summary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="12dp" />

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:background="#E3F2FD">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:textSize="13sp"
                    android:paddingStart="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:textSize="13sp"
                    android:textAlignment="textEnd"
                    android:paddingEnd="12dp"/>
            </LinearLayout>

            <!-- Summary Rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fingerlings"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummaryFingerlings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Feeds"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummaryFeeds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Maintenance"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummaryMaintenance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salary"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummarySalary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <!-- Total Row with Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="#F3E5F5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textColor="#1A237E"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvSummaryTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ROI Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:elevation="3dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return on Investment Analysis"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="16dp" />

            <!-- Estimated ROI Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3E5F5"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated ROI"
                    android:textColor="#1A237E"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Estimated Revenue & Percentage Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Estimated Revenue -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est. Revenue"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etEstimatedRevenue"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/textbox_background"
                            android:padding="8dp"
                            android:hint="₱"
                            android:textColorHint="#212121"
                            android:inputType="numberDecimal"
                            android:textColor="#212121"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Estimated ROI Percentage -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est. ROI (%)"
                            android:textColor="#424242"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvEstimatedROI"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/textbox_background"
                            android:padding="8dp"
                            android:text="-%"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Actual ROI Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual ROI"
                android:textColor="#1A237E"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Revenue Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revenue (Harvest)"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etActualSales"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/textbox_background"
                    android:padding="12dp"
                    android:hint="₱"
                    android:textColorHint="#212121"
                    android:inputType="numberDecimal"
                    android:textColor="#212121"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Capital & ROI Amount in Two Columns -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <!-- Capital -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capital"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvROICapital"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:text="₱"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <!-- ROI Amount -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ROI (Amount)"
                        android:textColor="#424242"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvROIAmount"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:text="₱"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Actual ROI Percentage - Highlighted -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E8F5E8"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Actual ROI (%)"
                    android:textColor="#1B5E20"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvROI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbox_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="%"
                    android:textColor="#1B5E20"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:minWidth="70dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Comparison Section (Optional) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF3E0"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="vs Estimated"
                    android:textColor="#E65100"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvROIDifference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#E65100"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:minWidth="50dp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>