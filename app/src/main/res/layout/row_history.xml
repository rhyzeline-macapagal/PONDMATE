<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Text container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvHistoryName"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Pond Name"
                    android:textColor="#001C4F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:layout_gravity="bottom"
                    android:maxLines="1"/>

                <Button
                    android:id="@+id/btnViewPdf"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="#001C4F"
                    android:text="View PDF"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:minWidth="0dp"
                    android:layout_marginStart="8dp"
                    style="?attr/materialButtonOutlinedStyle"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvHistoryAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deleted Pond"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2025-09-24 08:11 AM"
                android:textColor="#555555"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
