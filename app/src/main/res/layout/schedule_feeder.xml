<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".ScheduleFeeder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET SCHEDULE"
            android:textColor="#01082D"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_card"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish Count:"
                    android:layout_marginBottom="5dp"
                    android:textColor="#01082D"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Fish Weight:"
                    android:layout_marginBottom="5dp"
                    android:textColor="#01082D"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvsfishcount"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:enabled="true"
                    android:hint="00"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    android:textColor="#01082D"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="grams per piece"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd"
                    android:padding="12dp"
                    android:layout_marginStart="10dp"
                    android:textColorHint="#01082D"
                    android:textSize="14sp" />

            </LinearLayout>
            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:layout_marginTop="10dp"
                android:textColor="#01082D"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateoffeedingschedule"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:enabled="true"
                    android:hint="Jan. 01, 2025"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    android:textColor="#01082D"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnselectdate"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00448D"
                    android:text="Select"
                    android:layout_gravity="center"
                    app:cornerRadius="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:layout_marginTop="10dp"
                android:textColor="#01082D"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/timeoffeeding1"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:enabled="true"
                    android:hint="00:00"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    android:textColor="#01082D"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnselecttime1"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00448D"
                    android:text="Select"
                    android:layout_gravity="center"
                    app:cornerRadius="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/timeoffeeding2"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:enabled="true"
                    android:hint="00:00"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    android:textColor="#01082D"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnselecttime2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00448D"
                    android:text="Select"
                    android:layout_gravity="center"
                    app:cornerRadius="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/timeoffeeding"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:enabled="true"
                    android:hint="00:00"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    android:textColor="#01082D"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnselecttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00448D"
                    android:text="Select"
                    android:layout_gravity="center"
                    app:cornerRadius="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFFFFF" />

                <ImageButton
                    android:id="@+id/addtimebtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginTop="7dp"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="Add Image"
                    android:src="@android:drawable/ic_menu_add" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:foregroundGravity="center_vertical">

            </LinearLayout>

            <!-- Feed Quantity -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feed Quantity per Cycle:"
                    android:layout_marginTop="1dp"
                    android:textColor="#01082D"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/feedquantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:enabled="true"
                    android:hint="--"
                    android:padding="12dp"
                    android:textAlignment="textEnd"
                    android:textColor="#01082D"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/checkBoxDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:buttonTint="#01082D"
                    android:textColor="#01082D"
                    android:text="Set as Default" />

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/createbtn"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:text="CREATE"
                    android:backgroundTint="#00448D"
                    android:gravity="center"
                    app:cornerRadius="5dp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING SCHEDULE"
            android:textColor="#01082D"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <TableLayout
                android:id="@+id/summaryTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@drawable/tablebg"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tableheader"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:text="Date"
                        android:paddingHorizontal="8dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textSize="15sp" />

                    <TextView
                        android:text="Time"
                        android:paddingHorizontal="8dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textSize="15sp" />

                    <TextView
                        android:text="Feed Qty"
                        android:paddingHorizontal="8dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textSize="15sp" />

                    <TextView
                        android:text="Status"
                        android:paddingHorizontal="8dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>
        </ScrollView>

    </LinearLayout>
</ScrollView>