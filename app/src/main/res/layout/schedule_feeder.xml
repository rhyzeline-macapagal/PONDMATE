<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeding Schedule"
            android:textColor="#01082D"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvScheduleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnEditSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#00448D"
            android:drawableLeft="@drawable/ic_add"
            android:layout_gravity="end"
            app:cornerRadius="6dp"
            android:layout_marginBottom="4dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            style="?attr/materialButtonOutlinedStyle"/>



        <!-- Pond & Fish Info Card -->
        <!-- Pond & Fish Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pond Details"
                    android:textColor="#01082D"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Average Weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Average Weight:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvFishWeight"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:gravity="center"
                        android:text="0 g."
                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Fish Count -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fish Count:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvFishCount"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"

                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:textStyle="bold" />
                </LinearLayout>



                <!-- Feed Qty -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feed Qty:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvFeedQty"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"

                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:textColor="#01082D"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Feed Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feed Type:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvFeedType"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Starter"
                        android:gravity="center"

                        android:textColor="#01082D"
                        android:background="@drawable/textbox_background"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Price per Cycle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Price per Cycle:"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvFeedPrice"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbox_background"
                        android:text="â‚±0"
                        android:gravity="center"
                        android:textColor="#01082D"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Feeding Times Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:elevation="3dp">

                <!-- Feeding Times Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feeding Times"
                    android:textColor="#01082D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- First Feeding -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvFirstFeeding"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/textbox_background"
                            android:gravity="center"
                            android:text="00:00"
                            android:textColor="#01082D"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Second Feeding -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginHorizontal="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Second"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvSecondFeeding"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/textbox_background"
                            android:gravity="center"
                            android:text="00:00"
                            android:textColor="#01082D"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Third Feeding -->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Pending Schedule Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:elevation="3dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Schedule"
                    android:textColor="#01082D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Table -->
                <TableLayout
                    android:id="@+id/SummaryT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2,3"
                    android:background="#EEEEEE">

                    <!-- Header Row -->
                    <TableRow
                        android:background="#CCCCCC"
                        android:padding="8dp">

                        <TextView
                            android:text="Date"
                            android:textStyle="bold"
                            android:textColor="#01082D"
                            android:gravity="center" />

                        <TextView
                            android:text="Time"
                            android:textStyle="bold"
                            android:textColor="#01082D"
                            android:gravity="center" />

                        <TextView
                            android:text="Feed Qty"
                            android:textStyle="bold"
                            android:textColor="#01082D"
                            android:gravity="center" />

                        <TextView
                            android:text="Status"
                            android:textStyle="bold"
                            android:textColor="#01082D"
                            android:gravity="center" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
