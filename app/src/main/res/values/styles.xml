<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">#00448D</item>
        <item name="android:textColorPrimary">#01082D</item>
        <item name="android:headerBackground">#001C4F</item>
        <item name="android:background">#99B9D7</item>
    </style>

    <style name="CellStyleHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cell_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#012E43</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TransparentDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CalendarWidget.WeekDay" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FF018786</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWidget.Date" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalendarWidget.Header" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#FF018786</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="FeederHeaderText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="FeederSubtitleText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.App.DialogPDF" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowMinWidthMajor">80%</item> <!-- width of dialog -->
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalendarHeaderText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>



</resources>